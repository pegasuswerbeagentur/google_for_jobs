<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.sheetTitle</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <switchableControllerActions>
                        <label>LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.renderType.label</label>
                        <onChange>reload</onChange>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <default>list</default>
                            <items type="array">
                                <numIndex index="1" type="array">
                                    <numIndex index="0">LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.renderType.list</numIndex>
                                    <numIndex index="1">Job->list</numIndex>
                                </numIndex>
                                <numIndex index="2" type="array">
                                    <numIndex index="0">LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.renderType.show</numIndex>
                                    <numIndex index="1">Job->show</numIndex>
                                </numIndex>
                                <numIndex index="3" type="array">
                                    <numIndex index="0">LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.renderType.listSelected</numIndex>
                                    <numIndex index="1">Job->listSelected</numIndex>
                                </numIndex>
                            </items>
                        </config>
                    </switchableControllerActions>

                    <!-- order -->
                    <settings.job.orderBy>
                        <TCEforms>
                            <displayCond>FIELD:switchableControllerActions:=:Job->list</displayCond>
                            <label>LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.orderBy.label</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.orderBy.tstamp</numIndex>
                                        <numIndex index="1">tstamp</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.orderBy.datePosted</numIndex>
                                        <numIndex index="1">date_posted</numIndex>
                                    </numIndex>
                                    <numIndex index="3">
                                        <numIndex index="0">LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.orderBy.crdate</numIndex>
                                        <numIndex index="1">crdate</numIndex>
                                    </numIndex>
                                    <numIndex index="4">
                                        <numIndex index="0">LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.orderBy.title</numIndex>
                                        <numIndex index="1">title</numIndex>
                                    </numIndex>
                                </items>Created
                            </config>
                        </TCEforms>
                    </settings.job.orderBy>

                    <!-- order direction  -->
                    <settings.job.orderDirection>
                        <TCEforms>
                            <displayCond>FIELD:switchableControllerActions:=:Job->list</displayCond>
                            <label>LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.orderDirection.label</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.orderDirection.asc</numIndex>
                                        <numIndex index="1">asc</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.orderDirection.desc</numIndex>
                                        <numIndex index="1">desc</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.job.orderDirection>

                    <!-- Category Mode -->
					<settings.job.categoryConjunction>
						<TCEforms>
                            <displayCond>FIELD:switchableControllerActions:=:Job->list</displayCond>
							<label>LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.categoryConjunction.label</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0">LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.categoryConjunction.all</numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.categoryConjunction.or</numIndex>
										<numIndex index="1">or</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.categoryConjunction.and</numIndex>
										<numIndex index="1">and</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.categoryConjunction.notor</numIndex>
										<numIndex index="1">notor</numIndex>
									</numIndex>
									<numIndex index="4">
										<numIndex index="0">LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.categoryConjunction.notand</numIndex>
										<numIndex index="1">notand</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.job.categoryConjunction>

                    <!-- Categories -->
                    <settings.job.categories>
                        <TCEforms>
                            <displayCond>FIELD:switchableControllerActions:=:Job->list</displayCond>
                            <label>LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.categories.label</label>
                            <config>
                                <type>select</type>
                                <renderMode>tree</renderMode>
                                <renderType>selectTree</renderType>
                                <treeConfig>
                                    <appearance>
                                        <expandAll>1</expandAll>
                                        <showHeader>1</showHeader>
                                    </appearance>
                                    <parentField>parent</parentField>
                                </treeConfig>
                                <foreign_table>sys_category</foreign_table>
                                <foreign_table_where>AND (sys_category.sys_language_uid = 0 OR sys_category.l10n_parent = 0) ORDER BY sys_category.sorting</foreign_table_where>
                                <size>10</size>
                                <minitems>0</minitems>
                                <maxitems>99</maxitems>
                            </config>
                        </TCEforms>
                    </settings.job.categories>

                    <settings.job.detailPid>
                        <label>LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.detailPid.label</label>
                        <config>
                            <type>group</type>
                            <internal_type>db</internal_type>
                            <allowed>pages</allowed>
                            <size>1</size>
                            <maxitems>1</maxitems>
                            <minitems>0</minitems>
                            <show_thumbs>1</show_thumbs>
                        </config>
                    </settings.job.detailPid>
                    <settings.job.returnToPid>
                        <label>LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.returnToPid.label</label>
                        <config>
                            <type>group</type>
                            <internal_type>db</internal_type>
                            <allowed>pages</allowed>
                            <size>1</size>
                            <maxitems>1</maxitems>
                            <minitems>0</minitems>
                            <show_thumbs>1</show_thumbs>
                        </config>
                    </settings.job.returnToPid>

                    <!-- selectedList -->
                    <settings.job.listSelected>
                        <TCEforms>
                            <displayCond>FIELD:switchableControllerActions:=:Job->listSelected</displayCond>
                            <label>LLL:EXT:google_for_jobs/Resources/Private/Language/locallang_db.xlf:flexforms.listSelected.label</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>tx_googleforjobs_domain_model_job</allowed>
                                <size>3</size>
                                <maxitems>50</maxitems>
                                <minitems>1</minitems>
                            </config>
                        </TCEforms>
                    </settings.job.listSelected>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
